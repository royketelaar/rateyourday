<!DOCTYPE html>
<html>
<head>
	<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <title>Rateyourday</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  
  <!-- fonts -->
  <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
  
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div class="layout-978">
			<div class="row">
				<ul>
					<div class="col8">
						<li id="logo"><%= link_to 'Rate your workday' ,root_path%></li>
						<% if user_signed_in? %>
							<li><%= link_to "Rate!", ratings_path %></li>
						<%end%>
					</div>
					<div class="col4">
						<% if user_signed_in? %>
							<li id="profile-drop-down"><%= current_user.first_name + " " +current_user.last_name %>
							<ul class="drop-down">	
								<li><%= link_to "Mijn profiel", profile_path %></li>
								<li><%= link_to "Log uit", destroy_user_session_path, :method => :delete %></li>
							</ul>
						<% else %>
							<li><%= link_to "Inloggen", new_user_session_path %></li>
							<li><%= link_to "Registreren", new_user_registration_path%></li>
						<% end %>
						</li>
					</div>
				</ul>
			</div>
			<div class="row-end">&nbsp;</div>
		</div>
	</header>
	<div id="breaker"></div>
	
	<% if user_signed_in? %>
	<div class="layout-978">
		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>

		<%= yield %>	
	</div>
	<% else %>
		<%= yield %>
	<% end %>


</body>
</html>
